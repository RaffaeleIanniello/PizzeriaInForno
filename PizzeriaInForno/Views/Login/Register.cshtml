@model PizzeriaInForno.Models.utenti
@{
    ViewBag.Title = "Register";
}

</body>
<h2>Registrati</h2>
@using (Html.BeginForm("Register", "Login", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.username)
        @Html.TextBoxFor(m => m.username, new { @class = "form-control mt-1", required = "required" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.password)
        @Html.TextBoxFor(m => m.password, new { @class = "form-control", required = "required", type = "password" })
    </div>

    <button type="submit" class="btn btn-warning mt-3">Registrati</button>

}

